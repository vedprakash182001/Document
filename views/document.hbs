<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="statics/css/style.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/statics/css/style.css">
    <title>Document</title>
  </head>
  <body class="background3" >
    <div class="container1">
    
    {{!-- navbar  --}}
    {{>navbar  stat = stat username1 =  username }}
    {{!-- // document  upload Section--}}
    {{#if success}}
      <div class="alert alert-success mt-5 container text-center"
        <strong>Success! </strong>{{success}}.
      </div>
    {{/if}}


    {{#if stat}}
      <section class="py-5">
      <div class="container uploadsec">
        <div class="text-center">
          <div class="card" style="width:400px ;" >
            <div class="text-center upload-heading">
              <p>Upload Your Document</p>
            </div>
            <div class="card-body background2">
              <form action="/upload" method="post" enctype="multipart/form-data">
                <p class="docname">Enter Your document name :</p>
                <input name="fileName" type="text" class="form-control mb-2"placeholder="Enter your document name here" required>
                <input type="file" name="foo" class="form-control"required>
                <input type="submit" name="submit" value="Upload" class="btn btn-success mt-4"> 
              </form>
            </div>
          </div>
        </div>
      </div>
      </section>
    {{/if}}




    {{!-- dcoument view section  --}}
    <section class="py-5">
      <div class="container">
        <div class="row">
          {{#if stat}}
            {{#each totalimg.imageurl}}
              <div class="col-md-4 img-col">
                <div class="card">
                  <div class="text-center image-name background1">
                    <p>{{this.imagename}}</p>
                  </div>
                  <div class="card-body text-center py-4 background2">
                    <embed src="{{this.imagelink}}" class="img-fluid view-image"  >
                    <div class="text-center mt-4">
                      <div class="btn btn-design" aria-label="Basic mixed styles example">
                        <div class="view me-3">
                          <button type="button" class="btn btn-success" onclick="viewfunction(this)" >view</button>
                          <a  style="display: none;" href="{{this.imagelink}}" view>
                            <img src="{{this.imagelink}}" alt="W3Schools">
                          </a>
                        </div>
                        <div class="download">
                          <button type="button"  class="btn btn-warning" onclick=downloadfunction("{{this.imagelink}}",encodeURIComponent("{{this.imagename}}")) >Download</button>
                          {{!-- <a  style="display: none;"  href="{{this.imagelink}}" download>
                            <img src="{{this.imagelink}}" alt="W3Schools">
                          </a> --}}
                        </div>
                        <form action="/delete" method="post">
                          <input type="text" name="imgid" style="display: none;" value="{{this.imagelink}}" >
                          <input type="text" name="imgnam" style="display: none;" value="{{this.imagename}}" >
                          <button class="btn btn-danger ms-3">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            {{/each}}
          {{else}}
            <div class="document-text">
              <p>Please Login for any other details...</p>
            </div>
          {{/if}}


        </div>
      </div>
    </section>
      {{>footer}}
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/statics/js/index.js"></script>

  </body>
</html>